
<html>
<head>
<%= stylesheet_link_tag( 'pagination','style')%>
<%= javascript_include_tag('jquery.min', 'jquery.tablesorter')%>
</head>
<h1>Listing profiles</h1>

<table id="myTable" class="tablesorter" border = 1>
<thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Photo</th>
    <th>Dob</th>
    <th>Aboutme</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.name %></td>
    <td><%= profile.email %></td>
    <td><%= image_tag(profile.photo.url(:small)) %></td>
    <td><%= profile.dob %></td>
    <td><%= profile.aboutme %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Profile', new_profile_path %>


</html>
<script>
$(document).ready(function() 
    { 
        $("#myTable").tablesorter( {sortList: [[0,0], [1,0]]} ); 
    } 
);  
</script>

